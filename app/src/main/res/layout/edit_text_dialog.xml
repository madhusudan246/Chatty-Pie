<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@android:color/holo_green_light"
        app:boxStrokeColor="@android:color/holo_green_light"
        android:textColorHint="@android:color/holo_green_light"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
        android:textSize="@dimen/text_sz"
        android:layout_marginHorizontal="@dimen/layTopMargin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_dg"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:textColorHighlight="#9599CC00"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

    </com.google.android.material.textfield.TextInputLayout>



</LinearLayout>