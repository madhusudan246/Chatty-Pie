<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="7dp">

    <ImageView
        android:id="@+id/senderImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/sender_drawable"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/screen_background_light"
        android:contentDescription="@string/sender_image_description" />

    <TextView
        android:id="@+id/senderMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sender_image_drawable"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:text="@string/message"
        android:visibility="visible"
        android:textSize="18sp"
        android:layout_alignBottom="@id/senderImage"/>

</RelativeLayout>